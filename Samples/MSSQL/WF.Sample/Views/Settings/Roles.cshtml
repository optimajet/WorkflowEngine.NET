@model List<WF.Sample.Business.Role>

<table class="table">
    <tbody>
    <tr>
        <th style="width:20px">Number</th>
        <th>Name</th>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        <tr>
            <td>@(i+1)</td>
            <td>@item.Name</td>
        </tr>
    }   
</table>